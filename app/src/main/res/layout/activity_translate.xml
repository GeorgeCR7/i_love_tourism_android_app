<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D4E7F7"
    tools:context=".activities.TranslateActivity">

    <Button
        android:id="@+id/btnBackTranslate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#D33A3A"
        android:gravity="center"
        android:text="@string/back"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/txtTranslateTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/translate_to"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txtLanguageValue"
        app:layout_constraintStart_toStartOf="@+id/txtLanguageValue"
        app:layout_constraintTop_toBottomOf="@+id/txtLanguageValue" />

    <Spinner
        android:id="@+id/spnTranslateTxt"
        android:layout_width="285dp"
        android:layout_height="45dp"
        android:layout_marginTop="2dp"
        android:background="#1C1B1B"
        android:backgroundTint="#A2AAAE"
        app:layout_constraintEnd_toEndOf="@+id/txtTranslateTo"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/txtTranslateTo"
        app:layout_constraintTop_toBottomOf="@+id/txtTranslateTo"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/txtTranslateResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:textColor="#13487C"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txtTranslateResultLabel"
        app:layout_constraintStart_toStartOf="@+id/txtTranslateResultLabel"
        app:layout_constraintTop_toBottomOf="@+id/txtTranslateResultLabel" />

    <TextView
        android:id="@+id/txtTranslateOrgLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="@string/original_text"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtTranslateOrgValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:textColor="#13487C"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txtTranslateOrgLabel"
        app:layout_constraintStart_toStartOf="@+id/txtTranslateOrgLabel"
        app:layout_constraintTop_toBottomOf="@+id/txtTranslateOrgLabel" />

    <TextView
        android:id="@+id/txtTranslateResultLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="@string/translated_text"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/spnTranslateTxt"
        app:layout_constraintStart_toStartOf="@+id/spnTranslateTxt"
        app:layout_constraintTop_toBottomOf="@+id/spnTranslateTxt" />

    <TextView
        android:id="@+id/txtLanguageLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/text_language"
        android:textColor="#000000"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txtTranslateOrgValue"
        app:layout_constraintStart_toStartOf="@+id/txtTranslateOrgValue"
        app:layout_constraintTop_toBottomOf="@+id/txtTranslateOrgValue" />

    <TextView
        android:id="@+id/txtLanguageValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="#13487C"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txtLanguageLabel"
        app:layout_constraintStart_toStartOf="@+id/txtLanguageLabel"
        app:layout_constraintTop_toBottomOf="@+id/txtLanguageLabel" />

</androidx.constraintlayout.widget.ConstraintLayout>